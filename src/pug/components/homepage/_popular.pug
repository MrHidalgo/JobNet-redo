// SECTION :: START

mixin tabContent(arr)
	ul
		each val, idx in arr
			li
				a(href="#")!= val

section#popular.popular

	.popular__wrapper.popular__wrapper-1
		.c-grid

			ul#pills-tab.nav.nav-pills(role='tablist')
				li.nav-item
					a#popular-jobs-tab.active(
						data-toggle='pill', href='#popular-jobs', role='tab', aria-controls='popular-jobs', aria-selected='true'
					) Popular Jobs in Myanmar
				li.nav-item
					a#popular-industries-tab(
						data-toggle='pill', href='#popular-industries', role='tab', aria-controls='popular-industries', aria-selected='false'
					) Popular Industries
				li.nav-item
					a#popular-categories-tab(
						data-toggle='pill', href='#popular-categories', role='tab', aria-controls='popular-categories', aria-selected='false'
					) Popular Job Categories
				li.nav-item
					a#popular-location-tab(
						data-toggle='pill', href='#popular-location', role='tab', aria-controls='popular-location', aria-selected='false'
					) Popular Locations
				li.nav-item
					a#popular-companies-tab(
						data-toggle='pill', href='#popular-companies', role='tab', aria-controls='popular-companies', aria-selected='false'
					) Popular Companies

	.popular__wrapper.popular__wrapper-2
		.c-grid

			#pills-tabContent.tab-content
				#popular-jobs.tab-pane.fade.show.active(role='tabpanel', aria-labelledby='popular-jobs-tab')
					.tab-pane-header(popular-header-js)
						div
							p Popular Jobs in Myanmar
						div
							i.icon-font.icon-keyboard-arrow-down
					.tab-pane-content
						div
							+tabContent(['Account', 'Account Analyst', 'Account assistance'])
						div
							+tabContent(['Account Assistant', 'Accountant', 'Admin'])
						div
							+tabContent(['Admin Assistant', 'Admin Executive', 'Admin Manager'])
						div
							+tabContent(['Android Developer', 'Architect', '<span>View More</span>'])
				#popular-industries.tab-pane.fade(role='tabpanel', aria-labelledby='popular-industries-tab')
					.tab-pane-header(popular-header-js)
						div
							p Popular Industries
						div
							i.icon-font.icon-keyboard-arrow-down
					.tab-pane-content
						div
							+tabContent(['Accounting', 'Banking/Finance', 'Telecommunications'])
						div
							+tabContent(['Construction', 'IT', 'Recruitment / HR'])
						div
							+tabContent(['Logistics', 'Engineering', 'Manufacturing'])
						div
							+tabContent(['Trading / Distribution', 'Food and Beverage', '<span>View More</span>'])
				#popular-categories.tab-pane.fade(role='tabpanel', aria-labelledby='popular-categories-tab')
					.tab-pane-header(popular-header-js)
						div
							p Popular Job Categories
						div
							i.icon-font.icon-keyboard-arrow-down
					.tab-pane-content
						div
							+tabContent(['Accounting', 'Engineering', 'Driver, Security, Cleaner'])
						div
							+tabContent(['Management', 'Human Resources', 'Sales'])
						div
							+tabContent(['Administrative', 'IT', 'Marketing'])
						div
							+tabContent(['Customer Service', 'Hospitality / Tourism', '<span>View More</span>'])
				#popular-location.tab-pane.fade(role='tabpanel', aria-labelledby='popular-location-tab')
					.tab-pane-header(popular-header-js)
						div
							p Popular Locations
						div
							i.icon-font.icon-keyboard-arrow-down
					.tab-pane-content
						div
							+tabContent(['Yangon', 'Mandalay', 'NayPyiTaw'])
						div
							+tabContent(['Ayeyawady', 'Bago', 'Chin State'])
						div
							+tabContent(['Mon State', 'Shan State', 'Kachin State'])
						div
							+tabContent(['Sagaing', 'Magway', '<span>View More</span>'])
				#popular-companies.tab-pane.fade(role='tabpanel', aria-labelledby='popular-companies-tab')
					.tab-pane-header(popular-header-js)
						div
							p Popular Companies
						div
							i.icon-font.icon-keyboard-arrow-down
					.tab-pane-content
						div
							+tabContent(['City Mart Holding Co.Ltd', 'Colgate Palmolive (Myanmar) Ltd.', 'Pahtama Group Co.Ltd.]'])
						div
							+tabContent(['Wave Money', 'Peace Myanmar Group Co., Ltd. (PMG)', 'Grand Royal Group International'])
						div
							+tabContent(['Ananda', 'MyWorld Careers Co., Ltd.', 'Telecom International Myanmar Co., Ltd'])
						div
							+tabContent(['Coca-Cola Pinya Beverages Myanmar Limited', 'Myanmar Carlsberg Co., Ltd.', 'Ooredoo Myanmar', '<span>View More</span>'])

// SECTION :: END
