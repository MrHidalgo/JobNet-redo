section#login.login.login--forgot

	.login__wrapper

		.login__box
			p.login__box-title Please enter your details to reset your password.
			p.login__box-subtitle Enter your email to receive the Reset password notification email.

			form(action='' method='' autocomplete='off')
				.form-group
					label(for='emailLogin') Email
					.input-group
						.input-group-prepend
							i.icon-font.icon-email
						input.form-control.rounded-right(type='text', id='emailLogin', placeholder='E-mail' required)

				.form-group
					.c-btn__wrapper
						button.c-btn.c-btn--orange(type='submit')
							span Send

// SECTION :: END
