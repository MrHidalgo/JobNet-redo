section#login.login.login--register.login--register-3

	.login__logo

		.logo.logo--header
			a.logo__btn(href="/")
				img.logo__img(src="img/logo--white.png" alt="")

	.login__wrapper

		.login__step
			.login__step-btn.login__step-btn--prev Create account
			.login__step-btn.login__step-btn--prev  Jobs you want
			.login__step-btn.login__step-btn--current Start applying

		.login__box

			form(action='' method='' autocomplete='off')

				ul#pills-tab.nav.nav-pills(role='tablist')
					li.nav-item(role='presentation')
						a#pills-upload-cv.active(data-toggle='pill', href='#pills-home', role='tab', aria-controls='pills-upload-cv', aria-selected='true')
							p 1
							span Upload CV
					li.nav-item(role='presentation')
						a#pills-work-experience(data-toggle='pill', href='#pills-profile', role='tab', aria-controls='pills-work-experience', aria-selected='false')
							p 2
							span Work Experience

				#pills-tabContent.tab-content
					#pills-home.tab-pane.fade.show.active(role='tabpanel', aria-labelledby='pills-upload-cv')

						.login__upload
							p.login__upload-title Upload CV to start Applying for Jobs

							.login__upload-box
								svg(xmlns='http://www.w3.org/2000/svg', viewBox='-1 5 52 40', version='1.1')
									path(d='M 43.988281 23.542969 C 43.75 17.6875 38.910156 13 33 13 C 31.980469 13 31.003906 13.132813 30.035156 13.40625 C 27.796875 10.054688 24.019531 8 20 8 C 13.582031 8 8.324219 13.0625 8.015625 19.40625 C 3.324219 20.695313 0 25.027344 0 30 C 0 36.066406 4.933594 41 11 41 L 41 41 C 45.964844 41 50 36.964844 50 32 C 50 28.167969 47.515625 24.734375 43.988281 23.542969 Z M 30.292969 26.707031 L 26 22.414063 L 26 34 L 24 34 L 24 22.414063 L 19.707031 26.707031 L 18.292969 25.292969 L 25 18.585938 L 31.707031 25.292969 Z ')

								p.login__upload-box-title Upload your CV file here

								.c-btn__wrapper
									a.c-btn.c-btn--borderGreen(href="#")
										span Browse Files

								p.login__upload-box-info!= "You can attach <strong>.doc .docx</strong> and <strong>.pdf</strong> files <br>that are less then 5MB size"

							input(type='file' accept=".doc, .docx, .pdf")

					#pills-profile.tab-pane.fade(role='tabpanel', aria-labelledby='pills-work-experience')

						#login__scroll.login__scroll
							.form-group
								.input-group
									input.form-control(type='text' placeholder="Position, eg. HR Manager, Accountant, Sales..." required)

							.form-group
								.input-group
									input.form-control(type='text' placeholder="Company Name" required)

							.row
								.col
										select.form-control
											option(value='0' selected='selected') Job Function
											option(value='1') Accounting, Finance
											option(value='2') Administrative
											option(value='7') Architecture, Design
											option(value='4') Consulting
											option(value='6') Customer Service, Support
											option(value='23') Doctor, Nursing, Medical Staff
											option(value='8') Driver, Delivery, Motorbike
											option(value='9') Education, Teaching, Childcare
											option(value='10') Engineering, Technical, HSE
											option(value='13') Food and Beverage
											option(value='39') General Workers
											option(value='14') Health, Beauty, Fitness
											option(value='16') HR, Training and Recruitment
											option(value='15') Hospitality, Hotel, Tourism
											option(value='17') IT Hardware, Software
											option(value='18') Legal, Risk and Compliance
											option(value='19') Logistics, Distribution, Fleet
											option(value='20') Management
											option(value='21') Manufacturing, Warehouse
											option(value='22') Marketing, Media, Creative
											option(value='25') PR, Communications
											option(value='38') Procurement, Supply Chain
											option(value='24') Project, Operations Management
											option(value='26') Quality Assurance
											option(value='27') Research and Development
											option(value='30') Sales, Business Development
											option(value='31') Science, Technology
											option(value='32') Skilled Trades , Construction
											option(value='33') Strategy, Planning
											option(value='34') Translation
											option(value='35') Voluntary work
											option(value='36') Writing, Editing
											option(value='37') Others

								.col
									select.form-control
										option(value='0' selected='selected') Experience Level
										option(value='1') Entry Level
										option(value='2') Experienced Non-Manager
										option(value='3') Manager
										option(value='4') Director and Above

							.row
								.col
									.input-group.input-group--date
										input.form-control.datepicker(type='text' placeholder="From Date" required)
										i.icon-font.icon-calendar-1

								.col
									.input-group.input-group--date
										input.form-control.datepicker(type='text' placeholder="To Date" required)
										i.icon-font.icon-calendar-1

							.form-group.mb-2
								.custom-control.custom-switch
									input#currentWorkChecked.custom-control-input(type='checkbox')
									label.custom-control-label(for='currentWorkChecked') I Currently Work Here

							.form-group
								.login__box-separate
									span



						.form-group.form-group--flexEnd
							i.icon-font.icon-three-chevron-arrows
							.c-btn__wrapper
								a.c-btn.c-btn--borderBlue(href="#" add-work-js)
									span Add More Work Experience

						.form-group
							.c-btn__wrapper
								a.c-btn.c-btn--orange(href="#")
									span Save Profile

				.form-group
					.login__box-separate
						span

				.form-group.form-group--pb0
					p.login__box-info.login__box-info--tdn!= "<a href='/index.html'>Skip This Step</a>"

